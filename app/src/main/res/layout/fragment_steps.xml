<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout5"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".gameFragments.StepsFragment">

    <TextView
        android:id="@+id/step_1"
        android:layout_width="@dimen/step_width"
        android:layout_height="@dimen/step_height"
        android:layout_marginTop="@dimen/step_margin"
        android:background="@color/reveal"
        android:text="TextView"
        android:textColor="@color/spoiler"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/step_2"
        android:layout_width="@dimen/step_width"
        android:layout_height="@dimen/step_height"
        android:layout_marginTop="@dimen/step_margin"
        android:background="@color/spoiler"
        android:text="TextView"
        android:textColor="@color/spoiler"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/step_1" />

    <TextView
        android:id="@+id/step_3"
        android:layout_width="@dimen/step_width"
        android:layout_height="@dimen/step_height"
        android:layout_marginTop="@dimen/step_margin"
        android:background="@color/spoiler"
        android:text="TextView"
        android:textColor="@color/spoiler"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/step_2" />

    <TextView
        android:id="@+id/step_4"
        android:layout_width="@dimen/step_width"
        android:layout_height="@dimen/step_height"
        android:layout_marginTop="@dimen/step_margin"
        android:background="@color/spoiler"
        android:text="TextView"
        android:textColor="@color/spoiler"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/step_3" />

    <TextView
        android:id="@+id/step_5"
        android:layout_width="@dimen/step_width"
        android:layout_height="@dimen/step_height"
        android:layout_marginTop="@dimen/step_margin"
        android:background="@color/spoiler"
        android:text="TextView"
        android:textColor="@color/spoiler"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/step_4" />

    <TextView
        android:id="@+id/step_6"
        android:layout_width="@dimen/step_width"
        android:layout_height="@dimen/step_height"
        android:layout_marginTop="@dimen/step_margin"
        android:background="@color/spoiler"
        android:text="TextView"
        android:textColor="@color/spoiler"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/step_5" />

    <TextView
        android:id="@+id/step_7"
        android:layout_width="@dimen/step_width"
        android:layout_height="@dimen/step_height"
        android:layout_marginTop="@dimen/step_margin"
        android:background="@color/spoiler"
        android:text="TextView"
        android:textColor="@color/spoiler"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/step_6" />

    <EditText
        android:id="@+id/editTextText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/header_margin"
        android:ems="10"
        android:gravity="center"
        android:inputType="text"
        android:text="Name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/step_7" />

    <Button
        android:id="@+id/finish_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/step_margin"
        android:text="Finish"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextText" />
</androidx.constraintlayout.widget.ConstraintLayout>